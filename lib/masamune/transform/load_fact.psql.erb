CREATE TABLE <%= target.partition_table(date).name %> (
  <%= target.partition_table(date).constraints %>
) INHERITS (<%= target.name %>);

<%- target.foreign_key_columns.each do |column| -%>
ALTER TABLE <%= target.partition_table(date).name %> ADD CONSTRAINT <%= target.partition_table(date).name %>_<%= column.name %>_fkey FOREIGN KEY (<%= column.name %>) <%= column.reference_constraint %>;
<%- end -%>

INSERT INTO
  <%= target.partition_table(date).name %> (<%= target.insert_columns(source).join(', ') %>)
SELECT
  <%- target.insert_values(source).each do |value, last| -%>
  <%= value %><%= ',' unless last %>
  <%- end -%>
FROM
  <%= source.name %>
<%- target.join_conditions(source).each do |table, conditions| -%>
JOIN
  <%= table %>
ON
  <%= conditions.join(" AND\n  ") %>
<%- end -%>
;

<%- target.index_columns.each do |column_names, unique| -%>
<%- index_name = "#{target.partition_table(date).name}_#{column_names.join('_')}_index" -%>
CREATE <%= unique ? 'UNIQUE INDEX' : 'INDEX' %> <%= index_name %> ON <%= target.partition_table(date).name %> (<%= column_names.join(', ') %>);
<%- end -%>
